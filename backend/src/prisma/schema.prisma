generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int    @id @default(autoincrement())
  email        String @unique
  passwordHash String

  exercises Exercise[]
  workouts  Workout[]
}

model Exercise {
  id         Int                @id @default(autoincrement())
  name       String
  difficulty ExerciseDifficulty @default(MEDIUM)
  type       ExerciseType       @default(WEIGHT)
  user       User               @relation(fields: [userId], references: [id])
  userId     Int
  activities Activity[]
  createdAt  DateTime           @default(now())

  @@unique([userId, name], name: "exerciseIdentifier")
}

enum ExerciseDifficulty {
  EASY
  MEDIUM
  HARD
}

enum ExerciseType {
  BODY_WEIGHT
  WEIGHT
  STRETCH
  MOBILITY
}

model Workout {
  id           Int           @id @default(autoincrement())
  name         String
  type         WorkoutType   @default(WEIGHTS)
  user         User          @relation(fields: [userId], references: [id])
  userId       Int
  progressions Progression[]
  createdAt    DateTime      @default(now())

  @@unique([userId, name], name: "workoutIdentifier")
}

enum WorkoutType {
  CALISTHENICS
  WEIGHTS
  MIXED
  CARDIO
  TABATA
  HIIT
}

model Progression {
  id         Int        @id @default(autoincrement())
  workout    Workout    @relation(fields: [workoutId], references: [id])
  workoutId  Int
  activities Activity[]
  createdAt  DateTime   @default(now())
}

model Activity {
  id            Int                  @id @default(autoincrement())
  order         Int
  sets          Int
  reps          Int
  weight        Int?
  improvement   ActivityImprovement?
  exercise      Exercise             @relation(fields: [exerciseId], references: [id])
  exerciseId    Int
  progression   Progression          @relation(fields: [progressionId], references: [id])
  progressionId Int
}

enum ActivityImprovement {
  DECREASE
  MAINTAIN
  INCREASE
}
